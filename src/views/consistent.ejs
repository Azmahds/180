<!DOCTYPE html>
<html>
<head>
  
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Game Details</title>
<link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js">
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

<!-- Bootstrap -->
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<style>
body {
  font-family: Arial, Helvetica, sans-serif;
  background-color: beige;
}


/* The Modal (background) */

.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

.modal-content {
  background-color: whitesmoke;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}
.input {
  margin: 6px;
  padding: 10px;
  display: block;
  margin: auto;
  color: black;
  font-size: 30px;
}

input {
  width: 90%;
  display: block;
  margin-left: 12px;
  background: none;
  background-color: whitesmoke;
}

/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}
  
tr:nth-child(even) {
    background-color: #dddddd;
}
#heading {
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  color: black;
  padding-top: 20px;

}
#head {
  border-bottom: 2px solid red;
  height: 100px;
  background-color: beige;
}
#submit {
  background-color: white;
  width: 70px;
}

.button {
  margin: 0 auto;
  display: inline-block;
  text-align: center;
  background-color: gray;
  border: none;
  color: white;
  padding: 15px 32px;
  text-decoration: none;
  font-size: 16px;
  border-radius: 12px;
}

.button2 {
  background-color: white;
  border: none;
  color: black;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  border-radius: 12px;
  margin:auto;
}
.button:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
}

.button2:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
}

select {
    width: 500px;
    height: 30px;
}

</style>
</head>
<body>
    <div class="container">
        <div class="col-md-12">
        <h1 style= "width: 500px; margin: 0 auto; margin-top: 10%; text-align: center;">Most Consistent Team</h1><br>

<!-- Trigger/Open The Modal -->
        <button id="home" class="button" style="margin-left: 45px;">Most Home Wins</button>
        <button id="away" class="button">Most Away Wins</button>


        <!-- The Modal -->
        <div id="homeModal" class="modal">

        <!-- Modal content -->
            <div class="modal-content">
                <span onclick="document.getElementById('homeModal').style.display='none'"
                class="close">&times;
                </span>   
                <div id="home_form_page">
                <div id="home_form_body">
                    <div id="home_head">
                        <h1 id="home_heading">Most Home Wins</h1>
                    </div>
                    <br/>
                </div>
                </div>
                <table class="table" cellpadding="10" id="htable">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Team Name</th>
                            <th scope="col">Team ID</th>
                            <th scope="col">Home Wins</th>
                        </tr>
                    </thead>
                    <tbody id="hbody">
                    </tbody>
                </table>
            </div>
        </div>
        <div id="AwayModal" class="modal">

            <!-- Modal content -->
                <div class="modal-content">
                    <span onclick="document.getElementById('AwayModal').style.display='none'"
                    class="close">&times;
                    </span>   
                    <div id="away_form_page">
                    <div id="away_form_body">
                        <div id="away_head">
                            <h1 id="away_heading">Most Away Wins</h1>
                        </div>
                        <br/>
                    </div>
                    </div>
                    <table class="table" cellpadding="10" id="atable">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Team Name</th>
                                <th scope="col">Team ID</th>
                                <th scope="col">Away Wins</th>
                            </tr>
                        </thead>
                        <tbody id="abody">
                        </tbody>
                    </table>
                </div>
        </div>
        <table class="table" cellpadding="10" id="table" style="margin-left: -25%;">
            <thead>
                <tr>
                    <th scope="col"># </th>
                    <th scope="col">Team Name</th>
                    <th scope="col">TEAM_ID</th>
                    <th scope="col">TOTAL_WINS</th>
                </tr>
            </thead>
            <tbody id="body">
            </tbody>
        </table>          
        <p hidden id="allData"><%= all %></p>
        <p hidden id="homeData"><%= home %></p>
        <p hidden id="awayData"><%= away %></p>
    </div>

        <script>
            // Get the modal
            var modal = document.getElementById("homeModal");
          
            // Get the button that opens the modal
            var btn = document.getElementById("home");
          
            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];
            
            // When the user clicks the button, open the modal 
            btn.onclick = function() {
              modal.style.display = "block";
            }
            
            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
              if (event.target == modal) {
                modal.style.display = "none";
              }
            }
          </script>
        <script type="module" src="filterConsistent.js"></script>
    </body>
</html>