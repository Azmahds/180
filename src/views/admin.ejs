<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Admin</title>
<style>
body {font-family: Arial, Helvetica, sans-serif;}

/* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  padding-top: 100px; /* Location of the box */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content */
.modal-content {
  background-color: beige;
  margin: auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}
#form_page {
  height: 500px;
  width: 50%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  margin: auto;

}
.input {
  margin: 6px;
  padding: 10px;
  display: block;
  margin: auto;
  color: palevioletred;
  font-size: 30px;
}

input {
  width: 90%;
  display: block;
  margin-left: 12px;
  background: none;
  background-color: beige;
}

#form_body {
  border-radius: 12px;
  height: 350px;
  width: 450px;
  background-color: beige;
  border: 1px solid pink;
  margin: auto;
  margin-top: 12px;
}

/* The Close Button */
.close {
  color: #aaaaaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}
  
tr:nth-child(even) {
    background-color: #dddddd;
}
#heading {
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  color: black;
  padding-top: 20px;

}
#head {
  border-bottom: 2px solid red;
  height: 100px;
  background-color: beige;
}
#submit {
  background-color: white;
  width: 70px;
}

</style>
</head>
<body>

<div class="container">
    <h1 style= "width: 300px; margin: 0 auto; margin-top: 10%;">Admin Permissions</h1>
</div>

<!-- Trigger/Open The Modal -->
<button id="insert">Insert</button>

<!-- The Modal -->
<div id="insertModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
      <div id="insert_form_page">
        <div id="insert_form_body">
            <div id="insert_head">
                <h1 id="insert_heading">Insert Player</h1>
            </div>
            <br />
            <div id="insert_input_name" class="input">
                <input id="insert_name" type="text" 
                    Placeholder="Player Name" name="name">
            </div>
            <div id="insert_input_tid" class="input">
                <input id="insert_teamID" type="text" placeholder=
                    "teamID" name="Team ID">
            </div>
            <div id="insert_input_pid" class="input">
                <input id="insert_playerID" type="text" 
                    name="Player ID" 
                    placeholder="PlayerID">
            </div>
            <div id="insert_input_season" class="input">
              <input id="insert_season" type="text" 
                  name="Season" 
                  placeholder="Season">
            </div>
            <div class="id input">
                <input id="insert_submit" type="submit" 
                    name="submit" value="submit">
            </div>
        </div>
      </div>
  </div>

</div>
<button id="update">Update</button>

<!-- The Update Modal -->
<div id="updateModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
      <div id="update_form_page">
        <div id="update_form_body">
            <div id="update_head">
                <h2 id="update_heading">Update Player</h2>
            </div>
            <br />
            <div id="update_player_name" class="input">
                <input id="update_player" type="text" 
                    Placeholder="Player Name to Update" name="name">
            </div>
            <div id="update_player_season" class="input">
                <input id="update_season" type="text" 
                    Placeholder="Player Season to Update" name="name">
            </div>
            <br />
            <div id="update_input_name" class="input">
                <input id="update_name" type="text" 
                    Placeholder="New Player Name" name="name">
            </div>
            <div id="update_input_tid" class="input">
                <input id="update_teamID" type="text" placeholder=
                    "New teamID" name="Team ID">
            </div>
            <div id="update_input_pid" class="input">
                <input id="update_playerID" type="text" 
                    name="Player ID" 
                    placeholder="New PlayerID">
            </div>
            <div id="update_input_season" class="input">
              <input id="update_pseason" type="text" 
                  name="Season" 
                  placeholder="New Season">
            </div>
            <div class="id input">
                <input id="update_submit" type="submit" 
                    name="submit" value="submit">
            </div>
        </div>
      </div>
  </div>
</div>

<button id="delete">Delete</button>

<!-- The Delete Modal -->
<div id="deleteModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
      <div id="delete_form_page">
        <div id="delete_form_body">
            <div id="delete_head">
                <h3 id="delete_heading">Delete Player</h3>
            </div>
            <br />
            <div id="delete_input_name" class="input">
                <input id="delete_name" type="text" 
                    Placeholder="Player Name" name="name">
            </div>
            <div class="id input">
                <input id="delete_submit" type="submit" 
                    name="submit" value="submit">
            </div>
        </div>
      </div>
  </div>
</div>
<p hidden id="data"><%= allUsers %></p>


<script type="module" src="insert.js"></script>
<script>
  // Get the modal
  var modal = document.getElementById("insertModal");

  // Get the button that opens the modal
  var btn = document.getElementById("insert");

  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];
  var span2 = document.getElementsByClassName("close")[0];
  var span3 = document.getElementsByClassName("close")[0];


  var modal2 = document.getElementById("updateModal");
  var btn2 = document.getElementById("update");

  var modal3 = document.getElementById("deleteModal");
  var btn3 = document.getElementById("delete");

  // When the user clicks the button, open the modal 
  btn.onclick = function() {
    modal.style.display = "block";
  }
  btn2.onclick = function() {
    modal2.style.display = "block";
  }
  btn3.onclick = function() {
    modal3.style.display = "block";
  }

  // When the user clicks on <span> (x), close the modal #HELP ME PLS
  span.onclick = function() {
    modal.style.display = "none";
  }
  span2.onclick = function() {
    modal2.style.display = "none";
  }
  span3.onclick = function() {
    modal3.style.display = "none";
  }


  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal3) {
      modal3.style.display = "none";
    }
    if (event.target == modal2) {
      modal2.style.display = "none";
    }
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }

</script>
<script src="update.js"></script>

</body>
</html>
